# Application Config
PORT=3001
NODE_ENV=development

# Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=1h

# Email Service (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=password
EMAIL_FROM=noreply@bagmane.com

# File Storage
# STORAGE_TYPE=local (for development) or s3 (for production)
STORAGE_TYPE=local
UPLOAD_DIR=uploads/
